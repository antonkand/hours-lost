<!DOCTYPE html>
<html lang="en" ng-app="HoursLostApp">
<head>
    <title>How many hours of your life have you lost to social media? | Hours Lost App</title>
    <%- include partials/meta.ejs %>
    <%- include partials/css.ejs %>
</head>
<body ng-controller="HoursLostController as hourslost" ng-cloak>
    <div class="container">
        <%- include partials/landingpage_leadcopy.ejs %>
        <oauth-buttons values="hourslost.usernames"></oauth-buttons>
        <customization-sliders estimates="hourslost.data.estimates" recalc="hourslost.recalc"></customization-sliders>
        <calculated-result total="hourslost.data.total.minutes"></calculated-result>
        <final-result minutes="hourslost.data.minutes"></final-result>
        <share-field sharemessage="{{hourslost.shareMessage}}"></share-field>
        <%- include partials/scripts.ejs %>
        <%- include partials/footer.ejs %>
    </div>
</body>
